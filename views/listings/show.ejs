<%= layout("/layouts/boilerplate") %>
<body>
    <div class="row">
    <div class="row col-8 offset-2 mt-3">
    <h3 class="row offset-1">Listing Details</h3>
    </div>
    <div class="card col-6 offset-3  show-card border-0">
        <img  src="<%= listing.image.url %>" class="card-img-top  show-img" alt="listing_image" >
        <div class="card-body">
        <p class="card-text">
          <b> <%= listing.title %> </b> <br>
          &#8377;<%= listing.price.toLocaleString("en-IN") %>/night <br>
            <%= listing.description %> <br>
            <%= listing.country%> <br>
            <%= listing.location%>
        </p>
        </div>
    </div>
    <br>

    <div class="btns">
        <a href="/listings/<%= listing.id %>/edit" class="btn btn-dark col-1 offset-3 ">Edit</a>
       <form method="POST" action="/listings/<%= listing.id %>?_method=DELETE">
        <button class="btn btn-danger  offset-10">Delete</button>
       </form>
    </div>
    </div>
</body>
